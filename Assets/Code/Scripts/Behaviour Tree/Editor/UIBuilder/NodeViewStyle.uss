}

.action #input {
    background-color: rgb(55, 30, 48);
    width: 100%;
}

.composite #input {
    background-color: rgb(160, 62, 153);
    width: 100%;
}

.decorator #input {
    background-color: rgb(223, 87, 188);
    width: 100%;
    min-height: auto;
}

.conditional #input {
    width: 100%;
    background-color: rgb(231, 222, 205);
}

.root #input {
    width: 100%;
    min-height: 20px;
    background-color: rgb(246, 130, 140);
}

#node-state {
    position: absolute;
    left: auto;
    top: auto;
    right: auto;
    bottom: auto;
    background-color: rgba(255, 0, 0, 0);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    min-width: auto;
    min-height: auto;
    max-height: none;
    height: 105%;
    opacity: 1;
    width: 105%;
    align-items: center;
    justify-content: center;
    align-self: center;
    margin-top: -5px;
    margin-right: -5px;
    margin-bottom: -5px;
    margin-left: -5px;
}

.running #node-state {
    background-color: rgb(255, 183, 3);
}

.success #node-state {
    background-color: rgb(167, 201, 87);
}

.failure #node-state {
    background-color: rgb(193, 18, 31);
}
